
@{
    ViewData["Title"] = "Features";
    Layout = "~/Views/_Layout.cshtml";
}
@model Character

<h1>Features/Proficiencies</h1>

<a class="FloatingButton" asp-action="Features" asp-controller="UpdateCharacter">Update Features</a>

<table>
    <thead>
        <tr>
            <th>FEATURE NAME</th>
            <th>FEATURE DESCRIPTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Feature feature in @Model.Features.Features)
        {
        <tr>
            <th>@feature.featureName</th>
            <th>@feature.featureDescription</th>
            <td><a asp-action="NewFeature" asp-controller="UpdateCharacter">Add Feature</a></td>
            <td>
                <form asp-controller="UpdateCharacter" asp-action="Delete" method="post">
                    <input type="hidden" name="Id" value="@feature.Id" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

<p></p>

<table>
    <thead>
        <tr>
            <th>PROFICIENCY</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (string proficiency in @Model.Proficiencies)
            {
                <tr>
                    <th>@proficiency</th>
                </tr>
            }
        }
    </tbody>
</table>

