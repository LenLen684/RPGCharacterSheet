
@{
    ViewData["Title"] = "Inventory";
    Layout = "~/Views/_Layout.cshtml";
}
@model Character

<h1>Inventory</h1>

<table>
    <thead>
        <tr>
            <th>Currency</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Copper</th>
            <th>@Model.CharWallet.copper</th>
        </tr>
        <tr>
            <th>Silver</th>
            <th>@Model.CharWallet.silver</th>
        </tr>
        <tr>
            <th>Gold</th>
            <th>@Model.CharWallet.gold</th>
        </tr>
        <tr>
            <th>Electrum</th>
            <th>@Model.CharWallet.electrum</th>
        </tr>
        <tr>
            <th>Platinum</th>
            <th>@Model.CharWallet.platinum</th>
        </tr>
    </tbody>
</table>

<p></p>

<table>
    <thead>
        <tr>
            <th>Amount</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Item item in @Model.CharInventory.items)
            {
                <tr>
                    <th>@item.itemAmount</th>
                    <th>@item.itemName </th>
                    <th>@item.itemDescription</th>
                </tr>
            }
        }
    </tbody>
</table>
