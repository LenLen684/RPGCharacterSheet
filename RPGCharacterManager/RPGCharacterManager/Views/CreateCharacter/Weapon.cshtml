
@{
    ViewData["Title"] = "Add Weapon";
    Layout = "~/Views/_Layout.cshtml";
}
@model Character

<h1>Add Weapon</h1>
<form method="post">
    @*Weapon*@
    <table>
        <thead>
            <tr>
                <th><label asp-for="CharInventory.weaponField.weaponName">Weapon Name:</label></th>
                <th><label asp-for="CharInventory.weaponField.weaponDescription">Weapon Description:</label></th>
                <th><label asp-for="CharInventory.weaponField.weaponMod">Weapon Modifier:</label></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><input asp-for="CharInventory.weaponField.weaponName" /></th>
                <th><input asp-for="CharInventory.weaponField.weaponDescription" /></th>
                <th><input asp-for="CharInventory.weaponField.weaponMod" /></th>
            </tr>
        </tbody>
    </table>

    <p><button type="submit">Add Weapon</button></p>
</form>
