
@{
    ViewData["Title"] = "Update Skills";
    Layout = "~/Views/_Layout.cshtml";
}
@model Character

<h1>Update Skills</h1>

<form method="post">
    <table>
        <thead>
            <tr>
                <th>Skill Name</th>
                <th>Skill Modifier</th>
                <th>Proficient</th>
                <th>Skill Bonus</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.CharSkills.CharSkills.Length; i++)
            { 
                <tr>
                    <th>@Model.CharSkills.CharSkills[i].SkillName</th>
                    <th>@Model.CharSkills.CharSkills[i].Mod</th>
                    <th><input asp-for="CharSkills.CharSkills[i].IsProficient" /></th>
                    <th><input asp-for="CharSkills.CharSkills[i].Bonus"/></th>
                </tr>
            }
        </tbody>
    </table>
    <p><button type="submit">Update Skill</button></p>
</form>

