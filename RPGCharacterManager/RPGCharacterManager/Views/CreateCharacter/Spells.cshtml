
@{
    ViewData["Title"] = "Spells";
    Layout = "~/Views/_Layout.cshtml";
}
@model Character

<h1>Spells</h1>

<table>
    <thead>
        <tr>
            <th>SPELL NAME</th>
            <th>SPELL DESCRIPTION</th>
            <th>SPELL LEVEL</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Spell spell in @Model.Spells.Spells)
            {
                <tr>
                    <th>@spell.SpellName</th>
                    <th>@spell.SpellDescription</th>
                    <th>@spell.SpellLevel</th>
                </tr>
            }
        }
    </tbody>
</table>
